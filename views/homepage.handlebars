{{#each posts as |post| }}
<div class="row mb-4 project">
    <div class="col-md-5">

        {{#if logged_in}}
        <h2>
            <a class="post-name" href="/post/{{post.id}}">{{post.title}}</a>
        </h2>

        {{else}}
        <h2>
            <a href="/login">{{post.title}}</a>
        </h2>
        {{/if}}
        <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
</div>
{{/each}}